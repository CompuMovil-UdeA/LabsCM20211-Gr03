<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_margin="6dp"
    android:orientation="vertical"
    tools:context="co.edu.udea.compumovil.labs20211_gr03.lab2.fragment.VistaDetalleSitioFragment"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/thumbmail"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:scaleType="fitXY"
            android:src="@drawable/parque" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/thumbmail"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="casual"
            android:textAlignment="center"
            android:text="Parque Tayrona"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textDescri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textTitle"
            android:fontFamily="casual"
            android:padding="10dp"
            android:text="InformaciÃ³n General:"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textPuntuacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textDescri"
            android:fontFamily="casual"
            android:padding="10dp"
            android:text="Temperatura:"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/textSitiosRecomendados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textPuntuacion"
            android:fontFamily="casual"
            android:padding="10dp"
            android:text="Sitios Recomendados:"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>